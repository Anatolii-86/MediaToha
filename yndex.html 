<body>
    <div class="container">
        <header>
            <h1>üéµ –ú—ñ–π –ú—É–∑–∏—á–Ω–∏–π –°–∞–π—Ç</h1>
            <p>–ú—É–∑–∏–∫–∞ –∑ Internet Archive</p>
        </header>
        
        <main>
            <section class="player-section">
                <div class="main-player">
                    <div class="current-track">
                        <div class="track-info">
                            <h2 id="currentTitle">–û–±–µ—Ä—ñ—Ç—å –∫–æ–º–ø–æ–∑–∏—Ü—ñ—é</h2>
                            <p id="currentArtist">–ó—ñ —Å–ø–∏—Å–∫—É –Ω–∏–∂—á–µ</p>
                        </div>
                    </div>
                    
                    <audio id="audioPlayer" class="audio-player"></audio>
                    
                    <div class="progress-container" id="progressContainer">
                        <div class="progress-bar" id="progressBar"></div>
                    </div>
                    
                    <div class="time-info">
                        <span id="currentTime">0:00</span>
                        <span id="duration">0:00</span>
                    </div>
                    
                    <div class="controls">
                        <button onclick="previousTrack()">‚èÆ –ù–∞–∑–∞–¥</button>
                        <button onclick="togglePlay()">‚ñ∂ –í—ñ–¥—Ç–≤–æ—Ä–∏—Ç–∏</button>
                        <button onclick="nextTrack()">–î–∞–ª—ñ ‚è≠</button>
                    </div>
                </div>
                
                <div class="playlist-section">
                    <h2>üìã –ü–ª–µ–π–ª–∏—Å—Ç</h2>
                    <ul class="track-list" id="playlist">
                        <!-- –¢—Ä–µ–∫–∏ –±—É–¥—É—Ç—å –¥–æ–¥–∞–Ω—ñ —á–µ—Ä–µ–∑ JavaScript -->
                    </ul>
                </div>
            </section>
        </main>
        
        <footer>
            <p>–ú—É–∑–∏–∫–∞ –∑–±–µ—Ä—ñ–≥–∞—î—Ç—å—Å—è –≤ <a href="https://archive.org/" style="color: #4CAF50;">Internet Archive</a></p>
        </footer>
    </div>

    <script>
        // –¢–≤–æ—ó —Ç—Ä–µ–∫–∏ –∑ Internet Archive - –ó–ê–ú–Ü–ù–ò —Ü—ñ –ø–æ—Å–∏–ª–∞–Ω–Ω—è –Ω–∞ —Å–≤–æ—ó!
        const tracks = [
            {
                title: "–ù–∞–∑–≤–∞ –ø—ñ—Å–Ω—ñ 1",
                artist: "–í–∏–∫–æ–Ω–∞–≤–µ—Ü—å 1",
                src: "–¢–í–û–Ñ_–ü–û–°–ò–õ–ê–ù–ù–Ø_–ù–ê_MP3_1"
            },
            {
                title: "–ù–∞–∑–≤–∞ –ø—ñ—Å–Ω—ñ 2", 
                artist: "–í–∏–∫–æ–Ω–∞–≤–µ—Ü—å 2",
                src: "–¢–í–û–Ñ_–ü–û–°–ò–õ–ê–ù–ù–Ø_–ù–ê_MP3_2"
            },
            {
                title: "–ù–∞–∑–≤–∞ –ø—ñ—Å–Ω—ñ 3",
                artist: "–í–∏–∫–æ–Ω–∞–≤–µ—Ü—å 3", 
                src: "–¢–í–û–Ñ_–ü–û–°–ò–õ–ê–ù–ù–Ø_–ù–ê_MP3_3"
            }
        ];

        const audioPlayer = document.getElementById('audioPlayer');
        const progressBar = document.getElementById('progressBar');
        const progressContainer = document.getElementById('progressContainer');
        const currentTimeEl = document.getElementById('currentTime');
        const durationEl = document.getElementById('duration');
        const currentTitle = document.getElementById('currentTitle');
        const currentArtist = document.getElementById('currentArtist');
        const playlistEl = document.getElementById('playlist');
        
        let currentTrackIndex = 0;
        let isPlaying = false;

        // –ó–∞–≤–∞–Ω—Ç–∞–∂—É—î–º–æ –ø–ª–µ–π–ª–∏—Å—Ç
        function loadPlaylist() {
            tracks.forEach((track, index) => {
                const li = document.createElement('li');
                li.className = 'track-item';
                li.innerHTML = `
                    <div class="title">${track.title}</div>
                    <div class="artist">${track.artist}</div>
                `;
                li.addEventListener('click', () => playTrack(index));
                playlistEl.appendChild(li);
            });
        }

        // –í—ñ–¥—Ç–≤–æ—Ä–µ–Ω–Ω—è —Ç—Ä–µ–∫—É
        function playTrack(index) {
            currentTrackIndex = index;
            const track = tracks[index];
            
            audioPlayer.src = track.src;
            currentTitle.textContent = track.title;
            currentArtist.textContent = track.artist;
            
            // –û–Ω–æ–≤–ª—é—î–º–æ –≤–∏–¥—ñ–ª–µ–Ω–Ω—è –≤ –ø–ª–µ–π–ª–∏—Å—Ç—ñ
            document.querySelectorAll('.track-item').forEach((item, i) => {
                item.classList.toggle('playing', i === index);
            });
            
            audioPlayer.play();
            isPlaying = true;
        }

        // –ü–µ—Ä–µ–º–∏–∫–∞—á –≤—ñ–¥—Ç–≤–æ—Ä–µ–Ω–Ω—è/–ø–∞—É–∑–∏
        function togglePlay() {
            if (audioPlayer.src === '') {
                playTrack(0);
                return;
            }
            
            if (isPlaying) {
                audioPlayer.pause();
            } else {
                audioPlayer.play();
            }
            isPlaying = !isPlaying;
        }

        // –ù–∞—Å—Ç—É–ø–Ω–∏–π —Ç—Ä–µ–∫
        function nextTrack() {
            currentTrackIndex = (currentTrackIndex + 1) % tracks.length;
            playTrack(currentTrackIndex);
        }

        // –ü–æ–ø–µ—Ä–µ–¥–Ω—ñ–π —Ç—Ä–µ–∫  
        function previousTrack() {
            currentTrackIndex = (currentTrackIndex - 1 + tracks.length) % tracks.length;
            playTrack(currentTrackIndex);
        }

        // –û–Ω–æ–≤–ª–µ–Ω–Ω—è –ø—Ä–æ–≥—Ä–µ—Å—É
        function updateProgress(e) {
            const { duration, currentTime } = e.srcElement;
            const progressPercent = (currentTime / duration) * 100;
            progressBar.style.width = `${progressPercent}%`;
            
            currentTimeEl.textContent = formatTime(currentTime);
            if (duration) {
                durationEl.textContent = formatTime(duration);
            }
        }

        // –í—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–Ω—è –ø—Ä–æ–≥—Ä–µ—Å—É –ø—Ä–∏ –∫–ª—ñ–∫—É
        function setProgress(e) {
            const width = this.clientWidth;
            const clickX = e.offsetX;
            const duration = audioPlayer.duration;
            
            audioPlayer.currentTime = (clickX / width) * duration;
        }

        // –§–æ—Ä–º–∞—Ç—É–≤–∞–Ω–Ω—è —á–∞—Å—É
        function formatTime(seconds) {
            const mins = Math.floor(seconds / 60);
            const secs = Math.floor(seconds % 60);
            return `${mins}:${secs < 10 ? '0' : ''}${secs}`;
        }

        // –ü–æ–¥—ñ—ó
        audioPlayer.addEventListener('timeupdate', updateProgress);
        audioPlayer.addEventListener('ended', nextTrack);
        progressContainer.addEventListener('click', setProgress);

        // –ê–≤—Ç–æ–∑–∞–≤–∞–Ω—Ç–∞–∂–µ–Ω–Ω—è –ø–ª–µ–π–ª–∏—Å—Ç–∞
        loadPlaylist();
    </script>
